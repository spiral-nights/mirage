{
    "name": "@mirage/host",
    "version": "0.1.0",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/host/src/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/host/src/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsc --emitDeclarationOnly --outDir ./dist && bun build ./src/index.ts --outfile ./dist/index.js --target browser",
        "dev": "bun run --hot ./dev-server.ts",
        "test": "bun test --preload ./tests/setup.ts",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@mirage/core": "workspace:*"
    },
    "devDependencies": {
        "typescript": "^5.3.0"
    }
}